@{
    ViewData["Title"] = "ABM Cosas";
}

<h1 class="text-center"> ABM Cosas - MVC</h1>

<div class="row">
    <div class="col.sm-12">
        <div class="float-right"> 
            <a asp-action="Crear" asp-controller="Home" class="btn btn-success"> New Thing</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col.sm-12">
        <div class="card border">
            <div class="card-header">
                <h3 class="text-center"> List of Things </h3>
            </div>
            <div class="card-body">
                <div  class="table-responsive">
                    @if (Model.Count() > 0) { 
                        <table class="table table-bordered" width="100%" cellspacing="0">

                        </table>                     }
                    else
                    {
                        <p> No hay Registros</p>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
